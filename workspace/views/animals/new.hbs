
<div class="page-header">
    <h1>Új állat bejelentése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.nev}}
                has-error
            {{/if}}
        ">
            <label for="nev" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" id="nev" name="nev" type="text" value="{{data.nev}}">
                {{#if validationErrors.nev}}
                    <span class="help-block">{{validationErrors.nev.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.kenelszam}}
                has-error
            {{/if}}
        ">
            <label for="kenelszam" class="col-lg-2 control-label">Kenelszám</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="kenelszam" name="kenelszam">{{data.kenelszam}}</textarea>
                {{#if validationErrors.kenelszam}}
                    <span class="help-block">{{validationErrors.kenelszam.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Clear</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>

